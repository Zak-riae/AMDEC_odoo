<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_project_view_form" model="ir.ui.view">
        <field name="name">amdec_project_form</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <header>
                    <button
                        name="action_update_all_occurence"
                        string="Mise Ã  jour de tous les AMDEC"
                        type="object"
                        class="oe_highlight"
                    />
                </header>
                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <field name="general_amdec_seuil_rpn" />
                        <field name="description" />
                    </group>
                    <notebook>
                        <page string="AMDEC">
                            <group>
                                <field name="amdec_ids" />
                            </group>
                        </page>
                        <!--                        <page string="Period">-->
                        <!--                            <group>-->
                        <!--                                <field name="period_ids" />-->
                        <!--                            </group>-->
                        <!--                        </page>-->
                        <!--                        <page string="Grille occurence">-->
                        <!--                            <group>-->
                        <!--                                <field name="grille_occurence_ids" />-->
                        <!--                            </group>-->
                        <!--                        </page>-->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_project_view_graph" model="ir.ui.view">
        <field name="name">amdec_project_graph</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <graph string="AMDEC project">
                <field name="name" type="row" />
                <field name="general_amdec_seuil_rpn" type="measure" />
            </graph>
        </field>
    </record>

    <record id="amdec_project_view_kanban" model="ir.ui.view">
        <field name="name">amdec_project_kanban</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="general_amdec_seuil_rpn" />
                <field name="grille_occurence_ids" />
                <field name="period_ids" />
                <field name="amdec_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="general_amdec_seuil_rpn" />
                                        </strong>
                                    </li>
                                    <!--                                    <li class="mb4">-->
                                    <!--                                        <strong>-->
                                    <!--                                            <field name="grille_occurence_ids" />-->
                                    <!--                                        </strong>-->
                                    <!--                                    </li>-->
                                    <!--                                    <li class="mb4">-->
                                    <!--                                        <strong>-->
                                    <!--                                            <field name="period_ids" />-->
                                    <!--                                        </strong>-->
                                    <!--                                    </li>-->
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_ids" widget="many2many_tags" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_project_view_pivot" model="ir.ui.view">
        <field name="name">amdec_project_pivot</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <pivot string="AMDEC project">
                <field name="name" type="row" />
                <field name="general_amdec_seuil_rpn" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="amdec_project_view_search" model="ir.ui.view">
        <field name="name">amdec_project_search</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <search string="AMDEC project">
                <field name="name" />
                <field name="description" />
            </search>
        </field>
    </record>

    <record id="amdec_project_view_tree" model="ir.ui.view">
        <field name="name">amdec_project_tree</field>
        <field name="model">amdec.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="general_amdec_seuil_rpn" />
                <!--                <field name="grille_occurence_ids" widget="many2many_tags" />-->
                <!--                <field name="period_ids" widget="many2many_tags" />-->
                <field name="amdec_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_project_project_action_window"
        name="Project"
        res_model="amdec.project"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
