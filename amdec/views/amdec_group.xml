<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_group_view_form" model="ir.ui.view">
        <field name="name">amdec_group_form</field>
        <field name="model">amdec.group</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="amdec_id" />
                    </group>
                    <group>
                        <field name="severity" />
                    </group>
                    <group>
                        <field name="amdec_line_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_group_view_graph" model="ir.ui.view">
        <field name="name">amdec_group_graph</field>
        <field name="model">amdec.group</field>
        <field name="arch" type="xml">
            <graph string="Amdec group">
                <field name="name" type="row" />
                <field name="amdec_id" type="row" />
                <field name="severity" type="measure" />
            </graph>
        </field>
    </record>

    <record id="amdec_group_view_kanban" model="ir.ui.view">
        <field name="name">amdec_group_kanban</field>
        <field name="model">amdec.group</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="amdec_id" />
                <field name="severity" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="severity" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_group_view_pivot" model="ir.ui.view">
        <field name="name">amdec_group_pivot</field>
        <field name="model">amdec.group</field>
        <field name="arch" type="xml">
            <pivot string="Amdec group">
                <field name="name" type="row" />
                <field name="amdec_id" type="row" />
                <field name="severity" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="amdec_group_view_search" model="ir.ui.view">
        <field name="name">amdec_group_search</field>
        <field name="model">amdec.group</field>
        <field name="arch" type="xml">
            <search string="Amdec group">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('amdec_id','!=',False)]" name="amdec_id" string="Amdec" />
                <filter domain="[('severity','!=',False)]" name="severity" string="Severity" />
            </search>
        </field>
    </record>

    <record id="amdec_group_view_tree" model="ir.ui.view">
        <field name="name">amdec_group_tree</field>
        <field name="model">amdec.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="amdec_id" />
                <field name="severity" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_group_group_action_window"
        name="Group"
        res_model="amdec.group"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
