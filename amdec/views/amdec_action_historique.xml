<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_action_historique_view_form" model="ir.ui.view">
        <field name="name">amdec_action_historique_form</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="action_corrige_panne" />
                    </group>
                    <group>
                        <field name="action_realise" />
                    </group>
                    <group>
                        <field name="action_reparation" />
                    </group>
                    <group>
                        <field name="composante_id" />
                    </group>
                    <group>
                        <field name="system_id" />
                    </group>
                    <group>
                        <field name="type_panne_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_action_historique_view_graph" model="ir.ui.view">
        <field name="name">amdec_action_historique_graph</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <graph string="Amdec action historique">
                <field name="name" type="row" />
                <field name="action_corrige_panne" type="row" />
                <field name="action_realise" type="row" />
                <field name="action_reparation" type="row" />
                <field name="composante_id" type="row" />
                <field name="system_id" type="row" />
                <field name="type_panne_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_action_historique_view_kanban" model="ir.ui.view">
        <field name="name">amdec_action_historique_kanban</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="action_corrige_panne" />
                <field name="action_realise" />
                <field name="action_reparation" />
                <field name="composante_id" />
                <field name="system_id" />
                <field name="type_panne_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li
                                        class="text-success float-right mb4"
                                        t-if="record.action_corrige_panne.raw_value"
                                    >
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li
                                        class="text-danger float-right mb4"
                                        t-if="!record.action_corrige_panne.raw_value"
                                    >
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.action_realise.raw_value">
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.action_realise.raw_value">
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="action_reparation" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="composante_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="system_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="type_panne_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_action_historique_view_pivot" model="ir.ui.view">
        <field name="name">amdec_action_historique_pivot</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <pivot string="Amdec action historique">
                <field name="name" type="row" />
                <field name="action_corrige_panne" type="row" />
                <field name="action_realise" type="row" />
                <field name="action_reparation" type="row" />
                <field name="composante_id" type="row" />
                <field name="system_id" type="row" />
                <field name="type_panne_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_action_historique_view_search" model="ir.ui.view">
        <field name="name">amdec_action_historique_search</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <search string="Amdec action historique">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter
                    domain="[('action_corrige_panne','=',True)]"
                    name="action_corrige_panne"
                    string="Action Corrige Panne"
                />
                <filter domain="[('action_realise','=',True)]" name="action_realise" string="Action Realise" />
                <filter
                    domain="[('action_reparation','!=',False)]"
                    name="action_reparation"
                    string="Action Reparation"
                />
                <filter domain="[('composante_id','!=',False)]" name="composante_id" string="Composante" />
                <filter domain="[('system_id','!=',False)]" name="system_id" string="System" />
                <filter domain="[('type_panne_id','!=',False)]" name="type_panne_id" string="Type Panne" />
            </search>
        </field>
    </record>

    <record id="amdec_action_historique_view_tree" model="ir.ui.view">
        <field name="name">amdec_action_historique_tree</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="action_corrige_panne" />
                <field name="action_realise" />
                <field name="action_reparation" />
                <field name="composante_id" />
                <field name="system_id" />
                <field name="type_panne_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_action_historique_action_historique_action_window"
        name="Action historique"
        res_model="amdec.action.historique"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
