<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_action_historique_view_form" model="ir.ui.view">
        <field name="name">amdec_action_historique_form</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group />
                    <group>
                        <field name="date_action" />
                        <field name="defaillance_id" />
                        <field name="responsable_action_id" />
                        <field name="action_corrige_panne" />
                        <field name="action_realise" />
                        <field name="action_reparation_id" />
                        <field name="composante_id" />
                        <field name="system_id" />
                        <field name="type_panne_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_action_historique_view_graph" model="ir.ui.view">
        <field name="name">amdec_action_historique_graph</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <graph string="AMDEC action historique">
                <field name="name" type="row" />
                <field name="action_corrige_panne" type="row" />
                <field name="action_realise" type="row" />
                <field name="action_reparation_id" type="row" />
                <field name="composante_id" type="row" />
                <field name="date_action" type="row" />
                <field name="defaillance_id" type="row" />
                <field name="responsable_action_id" type="row" />
                <field name="system_id" type="row" />
                <field name="type_panne_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_action_historique_view_kanban" model="ir.ui.view">
        <field name="name">amdec_action_historique_kanban</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="action_corrige_panne" />
                <field name="action_realise" />
                <field name="action_reparation_id" />
                <field name="composante_id" />
                <field name="date_action" />
                <field name="defaillance_id" />
                <field name="responsable_action_id" />
                <field name="system_id" />
                <field name="type_panne_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li
                                        class="text-success float-right mb4"
                                        t-if="record.action_corrige_panne.raw_value"
                                    >
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li
                                        class="text-danger float-right mb4"
                                        t-if="!record.action_corrige_panne.raw_value"
                                    >
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.action_realise.raw_value">
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.action_realise.raw_value">
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="action_reparation_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="composante_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="date_action" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="defaillance_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="responsable_action_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="system_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="type_panne_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_action_historique_view_pivot" model="ir.ui.view">
        <field name="name">amdec_action_historique_pivot</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <pivot string="AMDEC action historique">
                <field name="name" type="row" />
                <field name="action_corrige_panne" type="row" />
                <field name="action_realise" type="row" />
                <field name="action_reparation_id" type="row" />
                <field name="composante_id" type="row" />
                <field name="date_action" type="row" />
                <field name="defaillance_id" type="row" />
                <field name="responsable_action_id" type="row" />
                <field name="system_id" type="row" />
                <field name="type_panne_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_action_historique_view_search" model="ir.ui.view">
        <field name="name">amdec_action_historique_search</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <search string="AMDEC action historique">
                <field name="name" />
                <filter
                    domain="[('action_corrige_panne','=',True)]"
                    name="action_corrige_panne"
                    string="Panne corrigé"
                />
                <filter
                    domain="[('action_corrige_panne','=',False)]"
                    name="action_not_corrige_panne"
                    string="Panne à corriger"
                />
                <filter domain="[('action_realise','=',True)]" name="action_realise" string="Action réalisée" />
                <filter
                    domain="[('action_realise','=',False)]"
                    name="action_not_realise"
                    string="Action non réalisée"
                />
                <group string="Group By" expand="1">
                    <filter name="defaillance_id" string="Défaillance" context="{'group_by':'defaillance_id'}" />
                    <filter
                        name="responsable_action_id"
                        string="Responsable"
                        context="{'group_by':'responsable_action_id'}"
                    />
                    <filter
                        name="action_reparation_id"
                        string="Type de réparation"
                        context="{'group_by':'action_reparation_id'}"
                    />
                    <filter name="composante_id" string="Composante" context="{'group_by':'composante_id'}" />
                    <filter name="system_id" string="Système" context="{'group_by':'system_id'}" />
                    <filter name="type_panne_id" string="Type de panne" context="{'group_by':'type_panne_id'}" />
                    <filter name="date_action" string="Date de l'action" context="{'group_by':'date_action'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="amdec_action_historique_view_tree" model="ir.ui.view">
        <field name="name">amdec_action_historique_tree</field>
        <field name="model">amdec.action.historique</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_action" />
                <field name="defaillance_id" />
                <field name="responsable_action_id" />
                <field name="action_corrige_panne" />
                <field name="action_realise" />
                <field name="action_reparation_id" />
                <field name="composante_id" />
                <field name="system_id" />
                <field name="type_panne_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_action_historique_action_historique_action_window"
        name="Action historique"
        res_model="amdec.action.historique"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
