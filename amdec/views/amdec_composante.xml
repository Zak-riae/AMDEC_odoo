<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_composante_view_form" model="ir.ui.view">
        <field name="name">amdec_composante_form</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="is_seuil_superior" />
                    </group>
                    <group>
                        <field name="seuil" />
                    </group>
                    <group>
                        <field name="valeur" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_composante_view_graph" model="ir.ui.view">
        <field name="name">amdec_composante_graph</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <graph string="Amdec composante">
                <field name="name" type="row" />
                <field name="is_seuil_superior" type="row" />
                <field name="seuil" type="measure" />
                <field name="valeur" type="measure" />
            </graph>
        </field>
    </record>

    <record id="amdec_composante_view_kanban" model="ir.ui.view">
        <field name="name">amdec_composante_kanban</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="is_seuil_superior" />
                <field name="seuil" />
                <field name="valeur" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.is_seuil_superior.raw_value">
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.is_seuil_superior.raw_value">
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="seuil" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="valeur" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_composante_view_pivot" model="ir.ui.view">
        <field name="name">amdec_composante_pivot</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <pivot string="Amdec composante">
                <field name="name" type="row" />
                <field name="is_seuil_superior" type="row" />
                <field name="seuil" type="measure" />
                <field name="valeur" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="amdec_composante_view_search" model="ir.ui.view">
        <field name="name">amdec_composante_search</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <search string="Amdec composante">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('is_seuil_superior','=',True)]" name="is_seuil_superior" string="Is Seuil Superior" />
                <filter domain="[('seuil','!=',False)]" name="seuil" string="Seuil" />
                <filter domain="[('valeur','!=',False)]" name="valeur" string="Valeur" />
            </search>
        </field>
    </record>

    <record id="amdec_composante_view_tree" model="ir.ui.view">
        <field name="name">amdec_composante_tree</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <tree decoration-danger="is_seuil_superior">
                <field name="name" />
                <field name="is_seuil_superior" />
                <field name="seuil" />
                <field name="valeur" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_composante_composante_action_window"
        name="Composante"
        res_model="amdec.composante"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
