<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_composante_view_form" model="ir.ui.view">
        <field name="name">amdec_composante_form</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <field name="system_id" />
                    </group>
                    <notebook>
                        <page string="AMDEC lines">
                            <field name="amdec_line_ids" />
                        </page>
                        <page string="Défaillances">
                            <field name="defaillance_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_composante_view_graph" model="ir.ui.view">
        <field name="name">amdec_composante_graph</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <graph string="AMDEC composante">
                <field name="name" type="row" />
                <field name="system_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_composante_view_kanban" model="ir.ui.view">
        <field name="name">amdec_composante_kanban</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="system_id" />
                <field name="amdec_line_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="system_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_line_ids" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_composante_view_pivot" model="ir.ui.view">
        <field name="name">amdec_composante_pivot</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <pivot string="AMDEC composante">
                <field name="name" type="row" />
                <field name="system_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_composante_view_search" model="ir.ui.view">
        <field name="name">amdec_composante_search</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <search string="AMDEC composante">
                <field name="name" />
                <group string="Group By" expand="1">
                    <filter name="system_id" string="Système" context="{'group_by':'system_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="amdec_composante_view_tree" model="ir.ui.view">
        <field name="name">amdec_composante_tree</field>
        <field name="model">amdec.composante</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="system_id" />
                <field name="amdec_line_ids" widget="many2many_tags" />
                <field name="defaillance_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_composante_composante_action_window"
        name="Composante"
        res_model="amdec.composante"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
