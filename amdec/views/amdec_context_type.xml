<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_context_type_view_form" model="ir.ui.view">
        <field name="name">amdec_context_type_form</field>
        <field name="model">amdec.context.type</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div name="button_box" class="oe_button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field
                                name="active"
                                widget="boolean_button"
                                options="{&quot;terminology&quot;: &quot;archive&quot;}"
                            />
                        </button>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_context_type_view_graph" model="ir.ui.view">
        <field name="name">amdec_context_type_graph</field>
        <field name="model">amdec.context.type</field>
        <field name="arch" type="xml">
            <graph string="Amdec context type">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_context_type_view_kanban" model="ir.ui.view">
        <field name="name">amdec_context_type_kanban</field>
        <field name="model">amdec.context.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_context_type_view_pivot" model="ir.ui.view">
        <field name="name">amdec_context_type_pivot</field>
        <field name="model">amdec.context.type</field>
        <field name="arch" type="xml">
            <pivot string="Amdec context type">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_context_type_view_search" model="ir.ui.view">
        <field name="name">amdec_context_type_search</field>
        <field name="model">amdec.context.type</field>
        <field name="arch" type="xml">
            <search string="Amdec context type">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="amdec_context_type_view_tree" model="ir.ui.view">
        <field name="name">amdec_context_type_tree</field>
        <field name="model">amdec.context.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_context_type_context_type_action_window"
        name="Context type"
        res_model="amdec.context.type"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
