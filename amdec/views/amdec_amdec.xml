<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="amdec_amdec_view_form" model="ir.ui.view">
        <field name="name">amdec_amdec_form</field>
        <field name="model">amdec.amdec</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <header>
                    <button
                        name="action_update_occurence"
                        string="Mise à jour des occurences"
                        type="object"
                        class="btn-success"
                        attrs="{'invisible':[('has_missing_data','=',False)]}"
                    />
                    <button
                        name="action_update_occurence"
                        string="Mise à jour des occurences"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('has_missing_data','=',True)]}"
                    />
                    <!--                    <button name="action_execute_algo_2" string="Execute algo 2" type="object" class="oe_highlight" />-->
                    <button
                        name="action_clear_occ_lines"
                        string="Effacer algorithme"
                        type="object"
                        class="btn-warning"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="has_missing_data" invisible="True" />
                        <field name="amdec_project_id" />
                        <field name="amdec_precedent_id" />
                    </group>
                    <notebook>
                        <page string="Modes de défaillance">
                            <field name="amdec_line_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="amdec_amdec_view_graph" model="ir.ui.view">
        <field name="name">amdec_amdec_graph</field>
        <field name="model">amdec.amdec</field>
        <field name="arch" type="xml">
            <graph string="AMDEC amdec">
                <field name="name" type="row" />
                <field name="amdec_precedent_id" type="row" />
                <field name="amdec_project_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="amdec_amdec_view_kanban" model="ir.ui.view">
        <field name="name">amdec_amdec_kanban</field>
        <field name="model">amdec.amdec</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="amdec_precedent_id" />
                <field name="amdec_project_id" />
                <field name="amdec_line_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_precedent_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_project_id" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="amdec_line_ids" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amdec_amdec_view_pivot" model="ir.ui.view">
        <field name="name">amdec_amdec_pivot</field>
        <field name="model">amdec.amdec</field>
        <field name="arch" type="xml">
            <pivot string="AMDEC amdec">
                <field name="name" type="row" />
                <field name="amdec_precedent_id" type="row" />
                <field name="amdec_project_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="amdec_amdec_view_search" model="ir.ui.view">
        <field name="name">amdec_amdec_search</field>
        <field name="model">amdec.amdec</field>
        <field name="arch" type="xml">
            <search string="AMDEC">
                <field name="name" />
                <field name="date_debut" />
                <field name="date_fin" />
                <filter domain="[('has_missing_data','=',True)]" name="missing_data" string="Missing data" />
                <group string="Group By" expand="1">
                    <filter name="amdec_project_id" string="Project" context="{'group_by':'amdec_project_id'}" />
                    <filter
                        name="amdec_precedent_id"
                        string="AMDEC précédent"
                        context="{'group_by':'amdec_precedent_id'}"
                    />
                    <filter name="date_debut" string="Date début" context="{'group_by':'date_debut'}" />
                    <filter name="date_fin" string="Date fin" context="{'group_by':'date_fin'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="amdec_amdec_view_tree" model="ir.ui.view">
        <field name="name">amdec_amdec_tree</field>
        <field name="model">amdec.amdec</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="amdec_project_id" />
                <field name="amdec_precedent_id" />
                <field name="amdec_line_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <act_window
        id="amdec_amdec_amdec_action_window"
        name="AMDEC"
        res_model="amdec.amdec"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
